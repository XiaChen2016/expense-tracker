		JsonFactory jsonFactory = JacksonFactory.getDefaultInstance();
		vision = new Vision.Builder(GoogleNetHttpTransport.newTrustedTransport(), jsonFactory, credentials)
				.setApplicationName("ExpenseTracker").build();
