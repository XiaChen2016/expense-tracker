package com.tracker.services;

import java.text.ParseException;
import java.text.SimpleDateFormat;
import java.util.ArrayList;
import java.util.Date;
import java.util.List;

import javax.annotation.PostConstruct;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.data.domain.Page;
import org.springframework.data.domain.Pageable;
import org.springframework.stereotype.Service;

import com.tracker.domain.receipt.Item;
import com.tracker.domain.receipt.Receipt;
import com.tracker.repositories.receipts.MongoReceiptRepository;

@Service
public class ReceiptsService {
	@Autowired
	private MongoReceiptRepository receiptRepository;
	
	public Page<Receipt> findByOwnerId( String id, Pageable pageable ) {
		return receiptRepository.findByOwnerId(id, pageable);
	}
	public Page<Receipt> searchReceipt( String place, String project, String total, String category, Pageable pageable ) {
		return receiptRepository
//				.findByPlaceContainingAndTotalContainingAndCategoryContaining( place, total, category, pageable );
				.findByPlaceLike( place, pageable );
	}
	
	public boolean save( Receipt receipt ) {
		receiptRepository.save( receipt );
		return true;
	}
	
	public boolean update( Receipt receipt ) {
		receiptRepository.update(receipt);
		return true;
	}
	
	public void delete( String id ){
//		receiptRepository.delete(id);
		receiptRepository.deleteAll();
	}
	
	
	@PostConstruct
	public void initDatabase() throws ParseException {
//		System.out.println( "Hello from receipt service. " );
//		delete("1");
		Receipt r1 = new Receipt();
		r1.setNote("This is a receipt of Bilbo 2016-11-20 09:32:11.");
		r1.setPlace("Kwik Trip");
		SimpleDateFormat sdf = new SimpleDateFormat("yyyy-MM-dd hh:mm:ss");
		Date date =  sdf.parse("2016-11-20 09:32:11");
		r1.setTime( date );
		r1.setCategory( new String[] {"Grocery","Fruit"} );
		r1.setOwnerId( "0" );
		Item i = new Item();
		i.setName("Apple");
		i.setPrice( 2f );
		i.setQuantity( 1 );
		List< Item > list_of_items = new ArrayList<Item>();
		list_of_items.add(i);
		r1.setList_of_items(list_of_items);
		r1.setTotal( 2 );
//		save( r1 );
		
		r1.setNote("This is a receipt of Bilbo 2016-11-21 09:02:01.");
		r1.setPlace("Kwik Trip");
		sdf = new SimpleDateFormat("yyyy-MM-dd hh:mm:ss");
		 date =  sdf.parse("2016-11-21 09:02:01");
		r1.setTime( date );
		r1.setCategory( new String[] { "Grocery"} );
		r1.setOwnerId( "0" );
		 i = new Item();
		i.setName("Water");
		i.setPrice( 4f );
		i.setQuantity( 1 );
		list_of_items = new ArrayList<Item>();
		list_of_items.add(i);

		i.setName("Ramen");
		i.setPrice( 1f );
		i.setQuantity( 4 );
		list_of_items.add(i);
		r1.setList_of_items(list_of_items);
		r1.setTotal( 4 );
//		save( r1 );

	}
}
